# Practical 5:
# Perform operations on a string:
# a) frequency of a character
# b) replace a character by another
# c) remove first occurrence of a character
# d) remove all occurrences of a character
# Interactively asks user for the string and operations

def freq(s, ch):
    return s.count(ch)

def replace_char(s, old, new):
    return s.replace(old, new)

def remove_first(s, ch):
    idx = s.find(ch)
    return s[:idx] + s[idx+1:] if idx != -1 else s

def remove_all(s, ch):
    return s.replace(ch, '')

def main():
    s = input("Enter the string: ")
    print("Choose operation:\n1-Frequency\n2-Replace\n3-Remove first occurrence\n4-Remove all occurrences")
    choice = input("Enter choice (1-4): ").strip()
    if choice == '1':
        ch = input("Enter character to count: ")
        print(f"Frequency: {freq(s, ch)}")
    elif choice == '2':
        old = input("Character to replace: ")
        new = input("Replacement character/string: ")
        print("Result:", replace_char(s, old, new))
    elif choice == '3':
        ch = input("Character to remove first occurrence: ")
        print("Result:", remove_first(s, ch))
    elif choice == '4':
        ch = input("Character to remove all occurrences: ")
        print("Result:", remove_all(s, ch))
    else:
        print("Invalid choice.")

if __name__ == "__main__":
    main()
