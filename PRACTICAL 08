# Practical 8:
# Create a list of cubes of only the even integers appearing in the input list
# (input may have elements of other types)
# a) using for loop
# b) using list comprehension

def parse_input_list(s):
    # expects comma-separated values; tries to interpret ints
    parts = [p.strip() for p in s.split(',') if p.strip() != ""]
    parsed = []
    for p in parts:
        try:
            parsed.append(int(p))
        except ValueError:
            # skip or keep as non-int
            parsed.append(p)
    return parsed

def cubes_for_loop(lst):
    res = []
    for x in lst:
        if isinstance(x, int) and x % 2 == 0:
            res.append(x**3)
    return res

def cubes_list_comp(lst):
    return [x**3 for x in lst if isinstance(x, int) and x % 2 == 0]

def main():
    s = input("Enter list elements separated by commas (e.g. 1, 2, a, 4): ")
    lst = parse_input_list(s)
    print("Using for-loop:", cubes_for_loop(lst))
    print("Using list comprehension:", cubes_list_comp(lst))

if __name__ == "__main__":
    main()
