# Practical 13:
# Accept a name from user. Raise and handle exceptions if the text contains digits and/or special characters.

import re

class InvalidNameError(Exception):
    pass

def validate_name(name):
    # allow only letters and spaces; disallow digits and punctuation
    if not name:
        raise InvalidNameError("Name cannot be empty.")
    if re.search(r'[^A-Za-z\s]', name):
        raise InvalidNameError("Name contains digits and/or special characters.")
    return True

def main():
    name = input("Enter your name: ").strip()
    try:
        validate_name(name)
        print("Name accepted:", name)
    except InvalidNameError as e:
        print("InvalidNameError:", e)

if __name__ == "__main__":
    main()
