# Practical 2:
# a) Check if n is prime
# b) Generate all prime numbers till n
# c) Generate first n prime numbers
# Program uses functions and accepts user input

def is_prime(n):
    if n <= 1:
        return False
    if n <= 3:
        return True
    if n % 2 == 0:
        return False
    i = 3
    while i*i <= n:
        if n % i == 0:
            return False
        i += 2
    return True

def primes_till(n):
    return [i for i in range(2, n+1) if is_prime(i)]

def first_n_primes(count):
    primes = []
    num = 2
    while len(primes) < count:
        if is_prime(num):
            primes.append(num)
        num += 1
    return primes

def main():
    n = int(input("Enter integer n: ").strip())
    print(f"is_prime({n}) -> {is_prime(n)}")
    print(f"All primes till {n}: {primes_till(n)}")
    k = int(input("Generate first how many primes? Enter k: ").strip())
    print(f"First {k} primes: {first_n_primes(k)}")

if __name__ == "__main__":
    main()
