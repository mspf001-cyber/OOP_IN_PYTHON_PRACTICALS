# Practical 7:
# Function that accepts two strings and returns indices of all occurrences
# of second string in first string as a list; return -1 if not present.

def find_all_occurrences(s, sub):
    if sub == "":
        return list(range(len(s)+1))  # every position
    indices = []
    start = 0
    while True:
        idx = s.find(sub, start)
        if idx == -1:
            break
        indices.append(idx)
        start = idx + 1  # overlapping allowed here
    return indices if indices else -1

def main():
    s = input("Enter the main string: ")
    sub = input("Enter substring to find: ")
    print("Indices:", find_all_occurrences(s, sub))

if __name__ == "__main__":
    main()
